{% extends 'base.html.twig' %}

{% block full_height %}{% endblock %}

{% block title %}Mes adresses - La boutique{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    <a href="{{ path('account') }}">Retourner à mon compte</a><br><br>

    {% if app.user.addresses | length == 0 %}
        Vous n'avez renseigné aucune adresse pour le moment.
    {% else %}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }}, <br>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', {'id' : address.id}) }}">Modifier</a> | <a href="{{ path('account_address_delete', {'id' : address.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>        
            {% endfor %}
        </div>

    {% endif %}
{% endblock %}
